<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.EmptyFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivCreateContract"
        android:layout_width="600dp"
        android:layout_height="600dp"
        app:lottie_rawRes="@raw/animation"
        app:lottie_autoPlay="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnStartCreateContract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="@dimen/margin_card"
        android:background="@drawable/rounded_button"
        android:text="@string/createContract"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCreateContract" />

</androidx.constraintlayout.widget.ConstraintLayout>